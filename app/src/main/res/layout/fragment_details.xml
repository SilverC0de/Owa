<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="44dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/details_image"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImageScaleType="centerCrop"
                    app:failureImageScaleType="centerCrop"
                    app:retryImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/view" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/close"
                    android:src="@drawable/back_white"
                    android:layout_margin="12dp"
                    android:padding="2dp"/>
                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/list_save"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="2dp"
                    android:layout_margin="12dp"
                    android:layout_alignParentEnd="true"
                    app:sparkbutton_inActiveImage="@drawable/like"
                    app:sparkbutton_activeImage="@drawable/liked"
                    app:sparkbutton_iconSize="28dp"
                    app:sparkbutton_primaryColor="@color/colorPrimary"
                    app:sparkbutton_secondaryColor="@color/colorAccent" />
            </RelativeLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:id="@+id/details_guest"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorShadow"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:id="@+id/details_room"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorShadow"
                    android:layout_marginBottom="2dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:id="@+id/details_bed"
                        android:gravity="end"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:background="@color/colorShadow"
                        android:layout_height="1px"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:id="@+id/details_bath"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/colorTextPro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/details_price"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/colorTextPro"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:id="@+id/details_hint"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/progress"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorTextPro"
                android:textSize="16sp"
                android:id="@+id/details_name"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/colorTextPro"
                android:id="@+id/details_info" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explore Nearby places"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/restaurant" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:text="Restaurant (0.4 KM away)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/groceries" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:text="Groceries (0.8 KM away)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/gym" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:text="Gym (0.9 KM away)"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/nightlife" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:text="Nightlife (1.2 KM away)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/atm" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:text="ATM (0.2 KM away)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/gas" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:text="Gas (0.5 KM away)"/>
                </LinearLayout>
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#E53935" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cable TV"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_cabletv"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#FBC02D" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Gym"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_gym"
                    android:layout_gravity="center"
                    android:src="@drawable/check" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#0E68C1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Running Water"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_water"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#00ACC1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Iron"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_iron"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#D81B60" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Laptop friendly space"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_work"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#FFB300" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Television"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_tv"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#8E24AA" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Wifi"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_wifi"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#D81B60" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Free parking space"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_park"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#1E88E5" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kitchen"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_kitchen"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#7CB342" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Microwave"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_microwave"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#FDD835" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kitchen Utensils"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_silverware"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#FB8C00" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Refrigerator"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_fridge"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#00897B" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cooking Gas"
                    android:padding="12dp"
                    android:textColor="@color/colorText" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha=".8"
                    android:layout_margin="4dp"
                    android:id="@+id/check_gas"
                    android:layout_gravity="center"
                    android:src="@drawable/uncheck" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/map"
                android:padding="8dp"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:textColor="@color/colorText"
                android:text="Exact location will be provided after booking" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:alpha=".8"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/chat"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button"
            android:text="Message Agent"
            style="?attr/borderlessButtonStyle" />
        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/vr"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button"
            android:text="View Apartment"
            style="?attr/borderlessButtonStyle" />
        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/reserve"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button"
            android:text="Reserve"
            style="?attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>