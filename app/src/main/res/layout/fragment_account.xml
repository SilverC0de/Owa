<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/back"
                android:layout_margin="12dp"
                android:padding="2dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Profile Details"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorText" />
            <Space
                android:layout_width="44dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:padding="12dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:placeholderImage="@drawable/avi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text=""
                android:gravity="center_vertical|bottom"
                android:textSize="18sp"
                android:textColor="@color/colorTextPro" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/account_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/profilekit">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha=".4"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/profile_info" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/colorTextHint"
                    android:textSize="11sp"
                    android:text="Full name" />
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:background="#00000000"
                    android:textColorHint="@color/colorText"
                    android:textColor="@color/colorTextPro"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:hint="Enter your name" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:src="@drawable/expand" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/profilekit">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:alpha=".4"
                android:padding="4dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_number" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/colorTextHint"
                    android:textSize="11sp"
                    android:text="Mobile number" />
                <EditText
                    android:id="@+id/edit_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:textSize="15sp"
                    android:textColorHint="@color/colorText"
                    android:textColor="@color/colorTextPro"
                    android:inputType="number"
                    android:maxLength="11"
                    android:hint="Enter mobile number" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:src="@drawable/expand" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/profilekit">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha=".4"
                android:padding="4dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_gender" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/colorTextHint"
                    android:textSize="11sp"
                    android:text="Gender" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:id="@+id/edit_gender"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:src="@drawable/expand" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/profilekit">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha=".4"
                android:padding="5dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_birth" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/colorTextHint"
                    android:textSize="11sp"
                    android:text="Date of birth" />
                <TextView
                    android:id="@+id/edit_dob"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Jan 2, 2020"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextPro" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:src="@drawable/expand" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/profilekit">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha=".4"
                android:padding="4dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_address" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/colorTextHint"
                    android:textSize="11sp"
                    android:text="Home address" />
                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#00000000"
                    android:textSize="15sp"
                    android:text="Enter your personal residential address"
                    android:textColorHint="@color/colorText"
                    android:textColor="@color/colorTextPro" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:src="@drawable/expand" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Save Profile"
            android:background="@drawable/button"
            android:layout_margin="8dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/save"
            style="?attr/borderlessButtonStyle" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>