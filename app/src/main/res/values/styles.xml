<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@color/colorTextPro</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="windowMinWidthMinor">99%</item>
        <item name="windowMinWidthMajor">99%</item>
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
    </style>

    <style name="HighlightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="sv_backgroundColor">#CC000000</item>
        <item name="sv_showcaseColor">#E3F2FD</item>
        <item name="sv_buttonText">Got It</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
